{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "module": "CommonJS",
        "rootDir": "src",
        "outDir": "dist",
        "newLine": "lf",
        "skipLibCheck": true,
        "noImplicitAny": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "removeComments": false
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules"]
}